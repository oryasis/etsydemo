<div class="center">
<div class="row">
  <% @listings.each do |listing| %>
  <div class="col-md-3">
    <div class="thumbnail">
      <%= link_to image_tag(listing.image.url), listing %>
      <div class="caption">
        <h3><%= listing.name %></h3>
        <p><%= number_to_currency(listing.price) %></p>
        <p><%= "Sold by #{listing.user.name}" %></p>
        <%= link_to 'Show', listing, class: "btn btn-info btn-xs" %>
        <% if (user_signed_in?) && (current_user == listing.user) %>
            <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-warning btn-xs" %>
            <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
</div>
</div>

<% if user_signed_in? %>
<%= link_to 'New Listing', new_listing_path, class: "btn btn-primary" %>
<% end %>